<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="10dp"
    sothree:umanoShadowHeight="4dp">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:context=".mvp.view.map.MapsActivity" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#E3F2FD">
                    <TextView
                        android:id="@+id/MapsPanelTextView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="#616161"
                        android:textSize="22sp"
                        android:text="Sithseeing Name1"
                        android:drawableTint="#BDBDBD"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        />


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#E3F2FD">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ic_location"
                        android:drawableLeft="@mipmap/ic_location_on_black_24dp"
                        android:drawableTint="#BDBDBD"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="3"
                        android:layout_margin="10dp"

                        />
                    <TextView
                        android:id="@+id/MapsPanelTextView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Sithseeing Name2"
                        android:textSize="22sp"
                        android:textColor="#616161"
                        android:drawableTint="#BDBDBD"
                        android:layout_weight="1"
                        android:layout_margin="10dp"


                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#E3F2FD">

                    <TextView
                        android:id="@+id/MapsPanelTextView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:textColor="#616161"
                        android:text=""
                        android:drawableLeft="@mipmap/ic_phone_black_24dp"
                        android:drawableTint="#BDBDBD"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="3"
                        android:layout_margin="10dp"


                        />

                    <TextView
                        android:id="@+id/MapsPanelTextView32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Sithseeing Name3"
                        android:textSize="22sp"
                        android:textColor="#616161"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#E3F2FD">
                    <TextView
                        android:id="@+id/MapsPanelTextView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#616161"
                        android:drawableLeft="@mipmap/ic_watch_later_black_24dp"
                        android:drawableTint="#BDBDBD"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:layout_margin="10dp"
                        android:layout_weight="3"

                        />
                    <TextView

                        android:id="@+id/MapsPanelTextView42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="#616161"
                        android:text="Sithseeing Name4"
                        android:layout_margin="10dp"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

